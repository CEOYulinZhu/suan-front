/* pages/profile/profile.wxss */
.user-profile-container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 140px;
}
.user-info-section {
  width: 90%;
  background: linear-gradient(135deg, rgb(22, 119, 255) 0%, rgb(64, 150, 255) 100%);
  color: white;
  border-radius: 32rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  box-shadow: rgba(22, 119, 255, 0.15) 0px 4px 20px;
}
.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  height: 250rpx;
}
.user-img {
  width: 150rpx;
  height: 150rpx; 
  border-radius: 75rpx; 
  overflow: hidden;
  background-color: #fff;
  margin-left: 50rpx;
}
.avatar {
  width: 100%;
  height: 100%;
}
.user-name-class {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}
.name {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 8px;
  text-shadow: rgba(0, 0, 0, 0.1) 0px 2px 4px;
}
.class {
  opacity: 0.9;
  font-size: 15px;
  background: rgba(255, 255, 255, 0.15);
  padding: 4px 12px;
  border-radius: 12px;
  display: inline-block;
}
.stats {
  display: flex;
  justify-content: space-around;
  padding: 20px 0px;
  border-top: 1px solid rgba(255, 255, 255, 0.15);
  margin-top: 8px;
}
.stat-item {
  text-align: center;
  position: relative;
}
.stat-item:last-child {
  border-right: none;
}
.stat-value {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 6px;
  text-shadow: rgba(0, 0, 0, 0.1) 0px 2px 4px;
}
.stat-label {
  font-size: 13px;
  opacity: 0.9;
  color: rgba(255, 255, 255, 0.9);
}
.function-section {
  width: 95%; 
  background-color: white;
  border-radius: 24rpx;
  margin-top: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.04) 0px 2px 8px;
}
.function-item {
  display: flex;
  height: 120rpx;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.function-label {
  font-size: 32rpx;
  flex: 1;
}
.arrow-icon {
  width: 40rpx;
  height: 40rpx;
}
.logout-section {
  width: 95%; 
  margin-top: 40rpx;
}
.logout-btn {
  text-align: center;
  padding: 25rpx;
  background-color: white;
  border: 2rpx solid red;
  color: red;
  border-radius: 24rpx;
}