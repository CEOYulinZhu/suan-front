/* pages/mistakes/mistakes.wxss */
.root{
  padding: 32rpx 40rpx;
}

.mitakesItem{
  background-color: white;
  margin-bottom: 40rpx;
  border-radius: 32rpx;
  box-shadow: 0rpx 8rpx 32rpx rgba(0, 0, 0, 0.05);
  padding: 0rpx 24rpx;
}

.dateTitle{
  height: 70rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: rgb(153, 153, 153);
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 28rpx 32rpx 0rpx;
}

.diviler{
  font-size: 50rpx;
  color:rgb(22, 119, 225);
}

.content{
  padding: 40rpx 32rpx;
}

.question{
  display: flex;
  justify-content: space-between;
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
  color: rgb(34, 34, 34);
  padding-bottom: 32rpx;
  border-bottom: 3rpx dashed rgb(238, 238, 238);
}

.questionType{
  text-align: center;
  color: rgb(22, 119, 255);
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 24rpx;
  padding: 8rpx 20rpx;
  background-color: rgb(230, 244, 255);
}

.contrast{
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.anwerRight{
  height: 45rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  background-color: rgb(255, 242, 240);
  border: 2rpx solid rgb(255, 204, 199);
  font-size: 32rpx;
  color: rgb(51, 51, 51);
}

.failIcon{
  height: 40rpx;
  width: 40rpx;  
  filter: drop-shadow(200rpx 0 0 red) brightness(1000%); transform: translateX(-200rpx);
}

.icons{
  height: 40rpx;
  width: 40rpx;
}

.anwerError{
  height: 45rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  background-color: rgb(246, 255, 237);
  border: 2rpx solid rgb(183, 255, 143);
  font-size: 32rpx;
  color: rgb(51, 51, 51);
}

.successIcon{
  height: 40rpx;
  width: 40rpx;  
  filter: drop-shadow(200rpx 0 0 green) brightness(1000%); transform: translateX(-200rpx);
}

.analyse{
  background-color: rgb(240, 247, 255);
  color: rgb(22, 119, 255);
  padding: 28rpx 32rpx;
  margin: 32rpx 0rpx;
  font-size: 30rpx;
  border-radius: 24rpx;
  position: relative;
}

.analyseTitle{
  background-color: rgb(22, 119, 255);
  color: white;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 400;
  position: absolute;
  top: -20rpx;
  left: 24rpx;
}

.type{
  margin: 32rpx 0rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.typeItem{
  padding: 8rpx 24rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
  border: 1rpx solid #1677ff;
  color: #1677ff;
}