/* pages/practice-daily/practice-daily.wxss */

.container{
    padding-top: 0%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start; 
    align-items: center; /* 水平居中 */
}
.check-in {
    display: flex;
    width: 80%;
    align-items: center;
    background-color: #f8d0cb;
    padding: 24rpx;
    margin: 50rpx 0rpx ;
    border-radius: 15px;
  }
  .check-in-icon{
      font-size: 36px;
      width: 40%;
      font-weight: bold;
      margin: 10px -20px 10px 20px;
      color: rgb(233, 76, 76);
  }
  .check-in-days{
      width: 50%;
      display: flex;
      flex-direction: column;
      font-weight: bold;
  }
  .check-in-days-text{
    color: #666666; 
    font-size: 25rpx;
  }

.progress-section {
    background-color: #fff;
    width: 80%;
    padding: 20rpx;
    border-radius: 15px;
    margin-bottom: 20rpx;
  }
  
  .progress-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15rpx;
  }
  
  .progress-title {
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .records-link {
    display: flex;
    align-items: center;
    color: #999;
    font-size: 24rpx;
  }
  
  .records-icon {
    margin-right: 5rpx;
  }
  
  .progress-bar {
    height: 15rpx;
    background-color: #eee;
    border-radius: 5rpx;
    margin-bottom: 15rpx;
    overflow: hidden;
    margin-top: 30px;
  }
  
  
  .progress-fill {
    height: 100%;
    background-color: #ff5252;
    border-radius: 5rpx;
  }
  
  .progress-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
  }
  
  .progress-count {
    font-size: 28rpx;
    font-weight: bold;
  }
  
  .progress-desc {
    font-size: 24rpx;
    color: #666;
  }
  
  .continue-practice {
    width: 100%;
    height: 80rpx;
    background-color: #ff5252;
    color: white;
    border: none;
    border-radius: 40rpx;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .rewards-section {
    background-color: #fff;
    padding: 20rpx;
    margin: 20px;
    border-radius: 15px;
    width: 80%;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
  }
  
  .rewards-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .reward-item {
    display: flex;
    justify-content: space-between;
    padding: 15rpx 0;
    font-size: 25rpx;
    border-bottom: 1rpx solid #eee;
    width: 100%;
  }
  .reward-item2 {
    display: flex;
    justify-content: space-between;
    padding: 15rpx 0;
    font-size: 25rpx;
  
    width: 100%;
  }
  /* 日历样式 */
  .calendar-section {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 15px;
    margin-bottom: 20rpx;
    width: 80%;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .calendar-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
    color: #333;
    text-align: center;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15rpx;
  }
  
  .calendar-nav {
    font-size: 24rpx;
    color: #999;
    cursor: pointer;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    transition: background-color 0.3s;
  }
  
  .calendar-nav:hover {
    background-color: #f5f5f5;
  }
  
  .calendar-month {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
  }
  
  .calendar-weekdays {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
    background-color: #f5f7fa;
    padding: 10rpx 0;
    border-radius: 5rpx;
  }
  
  .calendar-weekdays text {
    width: 14.28%;
    text-align: center;
    font-size: 24rpx;
    color: #333;
    font-weight: bold;
  }
  
  .calendar-days {
    display: flex;
    flex-wrap: wrap;
  }
  
  .calendar-day {
    width: 14.28%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #333;
    position: relative;
  }
  
  .calendar-day.gray {
    color: #999;
  }
  

.calendar-day.checked,
.calendar-day.is-today {
  color: blue; /* 统一设置签到和当天日期为蓝色 */
}


