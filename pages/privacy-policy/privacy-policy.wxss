.back{
  padding-bottom: 24px;
}
.policy-container {
  background: rgb(255, 255, 255);
  margin: 36rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 2px 8px;
}

.title {
  font-size: 35rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
  color: rgb(51, 51, 51);
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 70rpx;
  margin-bottom: 24rpx;
  color: rgb(34, 34, 34);
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgb(240, 240, 240);
  font-weight: bold
}

.section-content {
  line-height: 40rpx;
}

.content-item {
  font-size: 30rpx;
  line-height: 1.5;
  margin-bottom: 32rpx;
  color: rgb(68, 68, 68);
  text-align: justify;
}

.list-item {
  display: flex;
  align-items: start;
}

.list-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.list-text {
  font-size: 30rpx;
  line-height: 1.4;
  margin-bottom: 20rpx;
  color: rgb(68, 68, 68);
  text-align: justify;
}
.update-date{
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
}