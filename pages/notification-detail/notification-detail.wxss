.message-detail-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.message-item{
  background: rgb(255, 255, 255);
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: rgba(0, 0, 0, 0.05) 0rpx 4rpx 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}
.main-message {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.icon {
  margin-right: 16rpx;
  display: flex;
  width: 64rpx;
  height: 64rpx;
  background: rgb(240, 247, 255);
  border-radius: 24rpx;
  align-items: center;
  justify-content: center;
  color: rgb(22, 119, 255);
}
.message-title {
  font-weight: bold;
  font-size: 36rpx;
  font-weight: 500;
}
.time {
  font-size: 26rpx;
  color: rgb(153, 153, 153);
  margin-bottom: 32rpx;
  display: block;
}
.message-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: rgb(51, 51, 51);
}
.history-message {
  margin: 32rpx 24rpx;
  background: rgb(255, 255, 255);
  border-radius: 16rpx;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 2px 8px;
  overflow: hidden;
  padding-top: 16rpx;
}
.history-title {
  padding: 24rpx 32rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgb(51, 51, 51);
  font-weight: bold; 
}
.history-item {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #e5e5e5; /* 灰色分界线 */
  padding-bottom: 30rpx;
  border-bottom: none;
}
.history-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.history-content {
  font-size: 28rpx;
  color: rgb(102, 102, 102);
}
.history-time {
  font-size: 24rpx;
  color: rgb(153, 153, 153);
}

.history-img{
  font-size: 32rpx;
  color: rgb(153, 153, 153);
  margin-right: 20rpx;
}

.history-contents{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-right: 5rpx;
}