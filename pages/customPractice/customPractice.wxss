/* pages/customPractice/customPractice.wxss */
.container{
    padding-top: 0%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start; 
    align-items: center; /* 水平居中 */
}

.custom{
    width: 80%;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    margin: 50rpx;
    border-radius: 40rpx;
}
.title{

    display: flex;
    flex-direction: center ;
    margin: 30rpx 30rpx;
}
.function-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
  }
/* 运算类型 */
.setting-item{
    max-width: 100%;
    display: flex;
    flex-direction: column;
}
.item-label{
    margin-left: 30rpx;
    margin-bottom: 15rpx;
}
.operation-type{
    width: 95%;
    margin-left: 15rpx;
}


.op-btn {
    display: inline-block;
    margin: 10rpx;
    padding: 20rpx 30rpx;
    border: 1rpx solid #ddd;
    border-radius: 25rpx;
    transition: all 0.3s;
  }
  
  .op-btn.active {
    background: #007bff !important;
    color: white;
    border-color: #006fe6;
  }
  
  /* 确保默认加法初始蓝色 */
  .op-btn:nth-child(1) checkbox[checked] + .op-btn-text {
    background: #007bff;
  }

  /* 题目数量 */
.counter{
    width: 50%;
    display: flex;
    flex-direction: row;
    max-height: 300rpx;
    margin-left: 15rpx;
    border-radius: 50rpx;
}
.counterTitile{
    margin: 20rpx 30rpx;
    max-width: 100%;
    display: flex;
    flex-direction: column;
}
.counterSelect{
    flex: start;
    text-align: center;
    margin: 15rpx 10rpx;
}
  .change-button{
      
      max-width: 20%;
  }
  /* 位数选择 */
  .digit-select{
      width: 80%;
      margin-left:  30rpx;
  }
  .radio-group {
    display: block;
    margin: 10px 0;
  }
  .radio-label {
    display: flex;
    align-items: center; /* 启用flex布局并垂直居中 */
    padding: 8px 0;
    font-size: 16px;
    color: #333;
  }
  
  .radio {
    transform: scale(1); /* 恢复单选框默认大小 */
    margin-right: 8px; /* 调整单选框与文字间距 */
    vertical-align: middle;
  }
/* 更多选项 */
.moreCustom{
    width: 90%;
    margin-left:  30rpx;
    margin-bottom: 30rpx;
}
.switch-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
  }
  .start-practice{
    background-color: #007bff;
    color: white;
    box-shadow: rgba(22, 119, 255, 0.2) 0px 4px 12px;
    height: 80rpx;
    width: 600rpx;
    border-radius: 25rpx;
    font-size: 35rpx ;
   
    display: flex;                /* 启用弹性布局 */
    justify-content: center;      /* 水平居中 */
    align-items: center; 
  }

/* 练习部分 */
.progress-bar {
    height: 15rpx;
    background-color: #eee;
    border-radius: 5rpx;
    margin-bottom: 15rpx;
    overflow: hidden;
    margin-top: 30px;
  }
  .progress-fill {
    height: 100%;
    background-color: #ff5252;
    border-radius: 5rpx;
  }

.test-container{
    width: 80%;
    display: flex;
    flex-direction: column;
}

.test{
    width: 100%;
    background-color: #ffffff;
    min-height: 200px;
    border-radius: 15px;
    margin-top: 10px;
}
.test-text{
    text-align: center;
    color: #999;
    margin-top: 10px;
}
.progress-bar-fill {
    height: 100%;
    background-color: #409eff;
    border-radius: 3rpx;
    transition: width 0.3s ease;
  }
  
  .current-question {
    background: white;
    padding: 40rpx;
  }
  
  .question-title {
    font-size: 32rpx;
    color: #666;
    margin-bottom: 20rpx;
    text-align: center;
  }
  
  .question-text {
    font-size: 40rpx;
    color: #333;
    display: block;
    text-align: center;
    margin-bottom: 30rpx;
  }
  
  .answer-input {
    width: 90%;
    height: 80rpx;
    border: 2rpx solid #e0e0e0;
    border-radius: 15px;
    font-size: 36rpx;
    padding: 0 20rpx;
    text-align: center;
  }
  
  .result-tip {
    margin: 30rpx 0 40rpx;
    text-align: center;
  }
  
  .correct { color: #4cd137; }
  .incorrect { color: #ff4d4f; }
  .button-group{
     display: flex;
     flex-direction: center;
     margin-bottom: 20px;
  }
  .next-btn {
    max-width: 40%;
    height: 80rpx;
    background-color: #409eff;
    color: white;
    font-size: 32rpx;
    border-radius: 40rpx;
    transition: opacity 0.3s ease;
  }
  .next-time{
    min-width: 40%;
    height: 80rpx;
    background-color: white;
    border-radius: 40rpx;
    display: flex; 
    flex-direction: center;
    text-align: center;
  }
  .next-day{
    min-width: 40%;
    height: 80rpx;
    background-color: #409eff;
    border-radius: 40rpx;
    color: white;
    display: flex;          /* 启用 Flex 布局 */
    justify-content: center; /* 水平方向居中 */
    align-items: center; 
    margin: 30rpx 180rpx 1rpx;
  }

  .complete-tip {
    width: 100%;
    font-size: 32rpx;
    color: #666;
    text-align: center;
    margin-top: 20rpx;
  }



.test-detail{
    width: 100%;
    background-color: #ffffff;
    min-height: 150px;
    border-radius: 15px;
    margin-top: 10px;

}
.test-detai2{
    margin:15px;
    width: 90%;
}
.detail-title{
    font-size: 20px;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

  .detail-label {
    width: 95%;
    display: flex;
    justify-content: space-between;
    margin-top: 12px;
    margin-left: 12px;
    font-size: 28rpx;
    color: #666;
  }
  
  .detail-value {
    color: #333;
  }

  