.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: calc(100vh - 90px);
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #f8f9fa;
}

.page-container {
    width: 100%;
    max-width: 600rpx;
    padding: 40rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
    text-align: center;
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
}

.modefhead {
    height: 100rpx;
    margin-bottom: 20rpx;
}

.description {
    text-align: center;
    margin-bottom: 60rpx;
    font-size: 28rpx;
    color: #666666;
    line-height: 40rpx;
}

.start-btn, .submit-btn, .retry-btn, .return-btn {
    display: block;
    width: 100%;
    max-width: 300rpx;
    margin: 20rpx auto;
    padding: 20rpx 0;
    border-radius: 12rpx;
    font-size: 32rpx;
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
}

.start-btn, .submit-btn, .retry-btn {
    background-color: #1677ff;
    color: white;
}

.return-btn {
    background-color: #f5f5f5;
    color: #333333;
}

.start-btn:hover, .submit-btn:hover, .retry-btn:hover {
    background-color: #0e62d0;
    transform: translateY(-2rpx);
}

.return-btn:hover {
    background-color: #e6e6e6;
    transform: translateY(-2rpx);
}

.countdown-icon {
    text-align: center;
    margin-bottom: 30rpx;
}

.countdown-number {
    text-align: center;
    font-size: 120rpx;
    font-weight: bold;
    margin: 40rpx 0;
    color: #1677ff;
    transition: all 0.3s ease;
}

.countdown-number.yellow {
    color: #ffaa00;
    transform: scale(1.2);
}

.countdown-number.red {
    color: #ff4d4f;
    transform: scale(1.4);
}

.countdown-text {
    text-align: center;
    font-size: 32rpx;
    color: #666666;
}

.real-time-statistics {
    margin: 20rpx 0;
    border-radius: 16rpx;
    background-color: white;
    width: 100%;
    max-width: 600rpx;
    padding: 30rpx;
    box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.last-time {
    color: #666;
    font-size: 24rpx;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.time-bar {
    height: 10rpx;
    background-color: #eee;
    margin-bottom: 20rpx;
    border-radius: 5rpx;
    overflow: hidden;
}

.time-progress {
    height: 100%;
    background-color: #1677ff;
    transition: width 1s linear;
}

.time-progress.red {
    background-color: #ff4d4f;
}

.time-progress.yellow {
    background-color: #ffaa00;
}

.remaining-time {
    text-align: center;
    font-size: 36rpx;
    margin-bottom: 30rpx;
    font-weight: 500;
}

.remaining-time.red {
    color: #ff4d4f;
}

.remaining-time.yellow {
    color: #ffaa00;
}

.question {
    text-align: center;
    font-size: 56rpx;
    margin-bottom: 40rpx;
    font-weight: bold;
    color: #333;
    min-height: 80rpx; /* 确保有足够高度 */
}

.answer-input {
    display: block;
    width: 80%;
    padding: 20rpx;
    margin: 0 auto 40rpx;
    border: 2rpx solid #eee;
    border-radius: 12rpx;
    text-align: center;
    font-size: 40rpx;
    color: #333;
    box-shadow: inset 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

.answer-input::-webkit-input-placeholder {
    text-align: center;
    color: #ccc;
}

.nowtime {
    color: #333;
    font-size: 36rpx;
    margin-bottom: 20rpx;
    font-weight: 500;
}

.stat-item {
    margin-bottom: 15rpx;
    font-size: 28rpx;
    color: #666;
    text-align: left;
}

.finish-icon {
    margin: 20rpx auto 40rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background-color: #e6f4ff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.finish-text {
    text-align: center;
    font-size: 40rpx;
    margin-bottom: 20rpx;
    font-weight: bold;
    color: #333;
}

.summary {
    text-align: center;
    margin-bottom: 30rpx;
    font-size: 32rpx;
    color: #666;
}

.average-time {
    text-align: center;
    margin-bottom: 10rpx;
    font-size: 32rpx;
    color: #666;
}

.time-value {
    text-align: center;
    font-size: 56rpx;
    margin-bottom: 40rpx;
    font-weight: bold;
    color: #1677ff;
}

.speed-rating {
    text-align: center;
    margin-bottom: 40rpx;
    color: white;
    padding: 10rpx 30rpx;
    border-radius: 20rpx;
    display: inline-block;
    font-size: 32rpx;
}

.speed-rating.fast {
    background-color: #1677ff;
}

.speed-rating.medium {
    background-color: #ffaa00;
}

.speed-rating.normal {
    background-color: #666666;
}

.answer-details {
    margin-top: 40rpx;
    padding-top: 30rpx;
    border-top: 2rpx solid #eee;
}

.details-title {
    text-align: center;
    margin-bottom: 30rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
}

/* 新增：答题记录滚动容器 */
.answer-record-scroll {
    max-height: 400rpx; /* 限制最大高度 */
    overflow-y: auto; /* 垂直滚动 */
    margin: 20rpx 0;
}

/* 优化列表样式 */
.answer-record-list {
    margin-top: 0; /* 移除原有顶部间距 */
    border-radius: 12rpx;
    overflow: visible; /* 允许内容超出容器滚动 */
}

/* 滚动条样式 */
::-webkit-scrollbar {
    width: 6rpx; /* 滚动条宽度 */
}

::-webkit-scrollbar-track {
    background-color: #f5f5f5; /* 轨道背景 */
}

::-webkit-scrollbar-thumb {
    background-color: #ccc; /* 滚动条颜色 */
    border-radius: 3rpx; /* 圆角 */
}

/* 答题记录样式 */
.record-header {
    display: flex;
    padding: 15rpx 20rpx;
    background-color: #f5f5f5;
    border-bottom: 2rpx solid #eee;
}

.record-col {
    font-size: 24rpx;
    padding: 10rpx;
}

.record-question {
    flex: 3;
    font-weight: 500;
}

.record-answer {
    flex: 2;
    font-weight: 500;
}

.record-result {
    flex: 3;
    font-weight: 500;
}

.record-time {
    flex: 2;
    font-weight: 500;
    text-align: right;
}

.record-item {
    display: flex;
    padding: 15rpx 20rpx;
    border-bottom: 2rpx solid #f5f5f5;
    transition: all 0.2s ease;
}

.record-item:last-child {
    border-bottom: none;
}

.record-item:nth-child(even) {
    background-color: #f9f9f9;
}

.record-item:hover {
    background-color: #f0f0f0;
}

.record-time.fast {
    color: #1677ff;
    font-weight: bold;
}

.record-time.medium {
    color: #ffaa00;
}

.record-time.slow {
    color: #666666;
}

/* 优化后的提示框样式 */
.answer-tip-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 20rpx 40rpx;
    border-radius: 12rpx;
    z-index: 1000;
    max-width: 80%;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}

.answer-tip-container.show {
    opacity: 1;
    pointer-events: auto;
}

.answer-tip-container.hide {
    opacity: 0;
    pointer-events: none;
}

.answer-tip-text {
    font-size: 28rpx;
    line-height: 40rpx;
    padding: 10rpx 20rpx;
}