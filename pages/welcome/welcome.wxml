<!--pages/welcome/welcome.wxml-->
<view class="container">
  <view class="logo-container">
    <image class="logo" src="/assets/logo/logo.png"></image>
  </view>
  
  <view class="description">
    <text class="desc-line">开启你的速算之旅，</text>
    <text class="desc-line">让学习变得更智能、更有趣。</text>
  </view>

  <view class="button-group">
    <custom-button text="登录" type="primary" bindbuttontap="navigateToLogin"></custom-button>
    <custom-button text="注册" type="secondary" bindbuttontap="navigateToRegister"></custom-button>
  </view>

  <view class="experience-link" bindtap="navigateToExperience">
    直接体验
  </view>
</view>